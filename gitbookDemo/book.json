            "alipayText": "支付宝打赏",
            "wechatText": "微信打赏"
       },
 			"hide-element": {
            "elements": [".gitbook-link"]
       },
       "favicon":{
            "shortcut": "./res/images/favicon.jpg",
            "bookmark": "./res/images/favicon.jpg",
            "appleTouch": "./res/images/apple-touch-icon.jpg",
            "appleTouchMore": {
                "120x120": "./res/images/apple-touch-icon.jpg",
                "180x180": "./res/images/apple-touch-icon.jpg"
            }
       },
       "disqus": {
        	  "shortName": "gitbookuse"
    	 },
    	 "i18n": {
            "all": [
                "english", "chinese"
            ],
            "ChineseUrl": "../zh-CN",
            "EnglishUrl": "../en-US"
       },
       "page-toc-button": {
          "maxTocDepth": 2,
          "minTocSize": 2
       }
    
	}
