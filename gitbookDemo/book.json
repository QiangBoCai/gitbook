	  ],
	"pluginsConfig": {
			 "sharing": {
           "douban": true,
           "facebook": true,
           "google": true,
           "linkedin": true,
           "qq": true,
           "twitter": true,
           "vk": true,
           "weibo": true,
           "all": [
         		  "facebook", "google", "linkedin","twitter","vk","douban","weibo", "qq"
           ]
       },
			 "layout": {
				  "footerPath" : "./res/layouts/footer.html"
			 },
       "donate": {
            "wechat": "微信收款的二维码URL eg:./res/images/wechat.png",
